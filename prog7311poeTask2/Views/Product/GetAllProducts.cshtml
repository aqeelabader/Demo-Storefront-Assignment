@model IEnumerable<prog7311poeTask2.Models.ProductModel>

<h3>This page contains all of our products</h3>
<h4>If its not in the list below , then we dont keep it unfortunately</h4>
<br />
<h4> To see Items in a specific category , choose from the categories below</h4>
<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("GetAllHardwareProducts", "Product")';return false;">Hardware Products</button>
</p>
<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("GetAllSoftwareProducts", "Product")';return false;">Software Products</button>
</p>
<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("GetAllOtherProducts", "Product")';return false;">Accessories and Other</button>
</p>
<br />
<h4> To Search for a Specific product, Use the Search bar below.</h4><br />
<p>
    @using (Html.BeginForm("GetAllProducts", "Product", FormMethod.Get))
    {
        <input type="text" name="prodSearch" />
        <input type="submit" value="Search" name="submit" />
    }
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPic)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                <img class="profilePicture" src="@item.ProductPic" alt="@item.ProductPic" />
            </td>
            <td>
                <button class="btn btn-link">
                    @Html.ActionLink("Add to Cart", "Cart", new { id = item.PId })
                </button>
            </td>

        </tr>

    }

</table>

<p>
    <h4>click the button below to go back to the homepage</h4>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")';return false;">Home</button>

</p>

